<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:paddingBottom="24dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Difficulty Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_level"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_description"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/difficultyRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/difficultyBeginner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_beginner"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <RadioButton
                        android:id="@+id/difficultyIntermediate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_intermediate"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <RadioButton
                        android:id="@+id/difficultyAdvanced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_advanced"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <RadioButton
                        android:id="@+id/difficultyAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_all"
                        android:textSize="18sp"
                        android:padding="16dp"
                        android:checked="true" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Question Count Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/questions_per_game"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/questionCountRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/questions10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/questions_10"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <RadioButton
                        android:id="@+id/questions20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/questions_20"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <RadioButton
                        android:id="@+id/questions30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/questions_30"
                        android:textSize="18sp"
                        android:padding="16dp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/questions50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/questions_50"
                        android:textSize="18sp"
                        android:padding="16dp" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/save_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="32dp" />

    </LinearLayout>
</ScrollView>
